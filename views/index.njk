{% extends "layout.njk" %}

{% block head %}
{% endblock head %}

{% block content %}

            <div class="container">
        <header>
                <nav>
                    <h2 id="logo">Foodfy</h2>
                        <ul>
                        <li><a href="/"><b>Home</b></a></li>
                        <li><a href="/sobre">Sobre</a></li>
                        <li><a href="/receitas">Receitas</a></li>
                    </ul>
                </nav>
            </header>
                


        <div class="main-box">

            <div class="text">
                <h2>As melhores receitas</h2>
                <p>Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.
                </p>
            </div>
            <!-- text -->
            <div class="image">
                <img src="/assets/chef.png" alt="chef">
            </div>
        </div>

        <section id="dashboard">
            <div class="wrapper">
                <h2>Mais acessadas</h2>
            </div>

            <div class="cards">

                {% for item in items %}
                
                <div class="card" id="{{item.id}}">
                    <div class="image-content">
                        <img src="{{item.image}}" alt="">
                    </div>
                    <div class="card-txt">
                        <h3>{{item.title}}</h3>
                        <p>{{item.author}}</p>
                    </div>
                </div>
                {% endfor %}

                
            </div>
            <!-- cards -->
        </section>
        
        
      
    </div><!--container-->

        <script src="/script.js"></script>

{% endblock content %}